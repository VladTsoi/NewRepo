@model Calculator.Models.PaymentCreditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<style>
    .field-validation-error {
        color: red;
    }

    input.input-validation-error {
        border: 1px solid red;
    }

    input.valid {
        border: 1px solid green;
    }

    .validation-summary-errors {
        color: red;
    }
</style>
<form method="post">
    <p>
        <label asp-for="LoanSumm"></label><br />
        <input type="number" asp-for="LoanSumm" /><br />
        <span asp-validation-for="LoanSumm" />
    <p />
    <p>
        <label asp-for="LoanDeadline"></label><br />
        <input type="number" asp-for="LoanDeadline" /><br />
        <span asp-validation-for="LoanDeadline" />
    <p />
    <p>
        <label asp-for="PercentRate"></label><br />
        <input type="number" asp-for="PercentRate" /><br />
        <span asp-validation-for="PercentRate" /><br />
    <p />
    <div asp-validation-summary="ModelOnly"></div>
    <input type="submit" value="Рассчитать" />
</form>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
