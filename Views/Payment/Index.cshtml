@model IEnumerable<Calculator.Models.PaymentModel>

@{
    ViewData["Title"] = "Таблица результатов вычислений";
}

<table class="table">
    <thead>
        <tr>
            <th>               
                @Html.DisplayNameFor(Name => Name.Id)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.PaymentDateSort">
                    @Html.DisplayNameFor(Name => Name.PaymentDate)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.PaymentBodySizeSort">
                    @Html.DisplayNameFor(Name => Name.PaymentBodySize)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.PaymentPercentSizeSort">
                    @Html.DisplayNameFor(Name => Name.PaymentPercentSize)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.PrincipalBalanceSort">
                    @Html.DisplayNameFor(Name => Name.PrincipalBalance)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.OwedBalanceSort">
                    @Html.DisplayNameFor(Name => Name.OwedBalance)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentBodySize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentPercentSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrincipalBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwedBalance)
            </td>
        </tr>
}
    </tbody>
</table>
<p>Сумма всех переплат: @Model.Sum(p => p.PaymentPercentSize)
</p>

